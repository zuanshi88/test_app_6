
  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
        <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
          <div class="form-group mb-2 row">
            <%= form.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :description, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
              <%= form.submit class: "btn btn-outline-light col-2 mt-2 btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="mb-3 text-center">
        <%= link_to '[ Cancel and return to article listings ]', articles_path, class: "text-info text-center" %>
     </div>
  </div>
</div>