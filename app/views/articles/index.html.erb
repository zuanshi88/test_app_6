  <h1 class="text-center mt-4">Listing all articles</h1>
  <div class="container">
  <% @articles.reverse.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            by <%= article.user.username if article.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"> <%= link_to article.title, article_path(article), class: "text-success" %></h5>
            <p class="card-text"> <%= truncate(article.description, length: 100) %>.</p>
              <%= link_to 'view', article_path(article), class: "btn btn-outline-success" %></a>
              <%= link_to 'edit', edit_article_path(article), class: "btn btn-outline-info"  %></a>
              <%= link_to 'delete', article_path(article), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you REALLY sure?"} %> 
          </div>
          <div class="card-footer text-muted">
            <small>Create ago <%= time_ago_in_words(article.created_at)%>, edited <%= time_ago_in_words(article.updated_at)%> ago</small>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>




