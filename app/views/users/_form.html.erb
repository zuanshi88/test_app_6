
  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
          <div class="form-group row">
            <%= form.label :username, class: "col-2 col-form-label mb-2 text-light" %>
            <div class="col-10">
              <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :email, class: "col-2 col-form-label mb-2 text-light" %>
            <div class="col-10">
              <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter you email address" %>
            </div>
          </div>

            <div class="form-group row">
            <%= form.label :password, class: "col-2 col-form-label mb-2 text-light" %>
            <div class="col-10">
              <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Select a secure password" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
              <%= form.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-light col-2") %>
          </div>
        <% end %>
      </div>
      <div class="mb-3 text-center">
        <%= link_to '[ Cancel and return to article listings ]', articles_path, class: "text-info text-center" %>
     </div>
  </div>
</div>