   <div class="flickr_pagination">
        <%= will_paginate @users, container: false %>
    </div>
   <div class="container">
  <% @users.reverse.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            <%= link_to user.username, user %>
          </div>
           <h5 class="card-title">
            <%= link_to gravatar_for(user, size: 150), user %>
           </h5>

          <p class="class-text"><%= pluralize(user.articles.count, "article") %></p>

          <div class="card-body">
              <%= link_to 'view profile', user_path(user), class: "btn btn-outline-success" %></a>
              <%= link_to 'edit profile', edit_user_path(user), class: "btn btn-outline-info"  %></a>
              <%= link_to 'delete profile', user_path(user), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you REALLY sure?"} %> 
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at)%></small>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>
