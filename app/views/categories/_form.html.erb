
  
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
          <div class="form-group row">
            <%= form.label :name, "Category name", class: "col-2 col-form-label mb-2 text-light" %>
            <div class="col-10">
              <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
            </div>
          </div>


          <div class="form-group row justify-content-center">
              <%= form.submit class: "btn btn-outline-light" %>
          </div>
        <% end %>
      </div>
      <div class="mb-3 text-center">
        <%= link_to '[ Cancel and return to article listings ]', articles_path, class: "text-info text-center" %>
     </div>
  </div>
</div>